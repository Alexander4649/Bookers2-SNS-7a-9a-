<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>Followers Users</h2>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="5"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
            <td nowrap><%= user.name %></td>
            <td nowrap>フォロー数：<%= user.followings.count%></td>
            <td nowrap>フォロワー数：<%= user.followers.count%></td>
            <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>