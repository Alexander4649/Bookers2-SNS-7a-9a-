<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td><%= book.tag %></td>
        <td nowrap>
        <div id="favorite_buttons_<%= book.id %>">
            <%= render "favorites/favorite", book: book %></div>
        </td>
        <td>コメント数: <%= book.book_comments.count %></td>
        <td nowrap>
          <div id="star-rate<%= book.id%>"></td>
          <script>
            $('#star-rate<%= book.id %>').empty();
            $('#star-rate<%= book.id%>').raty({        // ('div').data.('raty').score/half/etc...();という意味で定義している
              size      : 36,
              starOff   : '<%= asset_path('star-off.png') %>',
              starOn    : '<%= asset_path('star-on.png') %>',
              half      : false,
              readOnly: true,
              score: '<%= book.star %>',
            });
          </script>
          </div>
        <td nowrap>閲覧数:<%= book.impressionist_count %></i></td>
        
      </tr>
    <% end %>
  </tbody>
</table>