<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          
          <!--タグ機能-->
          <td><%= @book.tag %></td>
          
          <!--イイね機能-->
          <td id="favorite_buttons_<%= @book.id %>">
              <%= render "favorites/favorite", book: @book %></td>
          
          <!--コメント数カウント機能-->
          <td>コメント数: <%= @book.book_comments.count %></td>
          
          <!--星評価設定-->
          <td>
            <div id="star-rate<%= @book.id%>"></td>
             <script>
              $('#star-rate<%= @book.id %>').empty();
              $('#star-rate<%= @book.id %>').raty({
                 size      : 36,
                 starOff   : '<%= asset_path('star-off.png') %>',
                 starOn    : '<%= asset_path('star-on.png') %>',
                 half      : false,
                 readOnly: true,  // #読み取り専用、編集できないようにする。
                 score: <%= @book.star %>,   // #@book= Book.find(params[:id])のstarカラムを取り出す。
               });
             </script>
          </td>
          <td>閲覧数:<%= @book.impressionist_count %></td>
          
          <!--編集・削除機能追加設定(ログイン中のユーザーにのみ)-->
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
        </tr>
      </table>
      
      
      <!--非同期通信設定-->
      <div id="book_comment_remote">
      <%= render "book_comments/index", book: @book %>
      </div>
      <div id="book_comment_form">
      <%= render "book_comments/form", book: @book, book_comment: @book_comment %>
      </div>
    </div>
  </div>
</div>